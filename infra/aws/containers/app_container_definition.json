[
  {
    "name": "mysql",
    "image": "${db_image_uri}",
    "essential": true,
    "memory": 512,
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-region": "ap-northeast-1",
        "awslogs-stream-prefix": "terr_pres_mysql",
        "awslogs-group": "/ecs/db"
      }
    },
    "environment": [
      {
        "name": "MYSQL_DATABASE",
        "value": "${mysql_database}"
      },
      {
        "name": "MYSQL_PASSWORD",
        "value": "${mysql_password}"
      },
      {
        "name": "MYSQL_ROOT_PASSWORD",
        "value": "${mysql_root_password}"
      },
      {
        "name": "MYSQL_USER",
        "value": "${mysql_user}"
      }
    ],
    "portMappings": [
      {
        "containerPort": 3306,
        "hostPort": 3306
      }
    ]
  },
  {
    "name": "api",
    "image": "${api_image_uri}",
    "essential": true,
    "memory": 256,
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-region": "ap-northeast-1",
        "awslogs-stream-prefix": "terr_pres_api",
        "awslogs-group": "/ecs/api"
      }
    },
    "portMappings": [
      {
        "containerPort": 8000,
        "hostPort": 8000
      }
    ]
  },
  {
    "name": "client",
    "image": "${client_image_uri}",
    "essential": true,
    "memory": 256,
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-region": "ap-northeast-1",
        "awslogs-stream-prefix": "terr_pres_client",
        "awslogs-group": "/ecs/client"
      }
    },
    "portMappings": [
      {
        "containerPort": 80,
        "hostPort": 80
      }
    ]
  }
]